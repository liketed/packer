{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/virtualbox.sh",
            "scripts/puppet7.sh",
            "scripts/packages.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "Fedora-25-puppet-virtualbox.box"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text selinux=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/Fedora.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 41000,
      "headless": true,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "524bd959dae09ad6fc8e0476ea478700d89f82ec5795d0b1a7b873613f3f26ac",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.informatik.uni-frankfurt.de/fedora/releases/25/Server/x86_64/iso/Fedora-Server-dvd-x86_64-25-1.3.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ]
}
