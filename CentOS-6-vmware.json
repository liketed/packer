{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/packages.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "output": "CentOS-6-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/CentOS-6.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 41240,
      "guest_os_type": "centos-64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "af4a1640c0c6f348c6c41f1ea9e192a2",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirror.netcologne.de/centos/6/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "tools_upload_flavor": "linux",
      "vm_name": "packer-centos-6-x86_64",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1"
      },
      "vnc_disable_password": true,
      "vnc_port_min": "5900",
      "vnc_port_max": "5900"
    }
  ]
}
